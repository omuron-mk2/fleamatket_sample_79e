.HeaderUsers
  .HeaderUsers__logo
    = link_to image_tag("/assets/logo_users.png", size: "180x50"), root_path

.AccountPage
  .AccountPage__title
    Log in
  .AccountPage__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

      .FormField
        .FormField__label
          = f.label :email
        .FormField__input--normal
          = f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email"

      .FormField
        .FormField__label
          = f.label :password
        .FormField__input--normal
          = f.password_field :password, placeholder: "Password", autocomplete: "new-password"

      - if devise_mapping.rememberable?
        .FormField__remember
          = f.check_box :remember_me
          = f.label :remember_me, "ログインしたままにする"

      .actions
        = f.submit "ログイン"
    = render "devise/shared/links"